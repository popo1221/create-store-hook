{
  "include": ["./src/**/*.*"],
  "exclude": ["./webpack.config.ts"],
  "compileOnSave": true,
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "baseUrl": "./src/",
    "rootDir": "./src/",
    "outDir": "./lib/",
    "jsx": "react",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "ES5",
    "module": "ESNext"
  },
  "ts-node": {
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS"
    }
  }
}
